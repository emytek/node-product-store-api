<!DOCTYPE html>
<html lang="en">
<%- include('includes/head.ejs') %> 
<body>
    <%- include('includes/navigation.ejs')  %> 
        <main>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h1>Products List</h1>
                        <% if (products.length) { %>
                        <% for(let product of products) { %>
                            <h3><%=product.title%></h3>
                        <% } %>
                        <% } else { %>
                            <div>No products available</div>
                            <% } %> 
                    </div>
                </div>
            </div>
        </main>
        <%- include('includes/footer.ejs')  %> 
</body>
</html>